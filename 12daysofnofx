    }

    #albumContent {
      background: #fff0f0;
      padding: 30px;
      border-radius: 15px;
      width: 320px;
      text-align: center;
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
      border: 2px solid #d70000;
    }

    button {
      margin-top: 20px;
