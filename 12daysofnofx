    }

    button:hover {
      background: #ff1a1a;
    }

    /* Snow effect */
    .snowflake {
      position: fixed;
      top: -10px;
      color: #fff;
      font-size: 1em;
      user-select: none;
      pointer-events: none;
      z-index: 1;
      animation-name: fall;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
